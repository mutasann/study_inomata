<%= form_for user do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger" role="alert">
        <h2><%= pluralize(user.errors.count, "個のエラーがあります！") %> 保存に失敗しました </h2>
        <ul>
          <% user.errors.full_messages.each do |message| %>
            <%= message %><br>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <p>
        <div class="field">
          <%= f.label :名前 %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :ログインID %>
          <%= f.text_field :login_id, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <%= f.password_field :password, soze: 20, maxlength: 15, desabled: true, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :ユーザータイプ %></br>
          <%= f.select :user_type, User.user_type.options, class: 'form-control' %></br>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, size: 25, maxlength: 30, class: 'form-control' %>
      </div>
      </p>
      <p>
        <div class="actions">
          <%= f.submit "新規作成", class: "btn btn-primary" %>
        </div>
      </p>
    </div>
  </div>
<% end %>
