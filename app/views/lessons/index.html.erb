<p id="notice"><%= notice %></p>
<div class="page-header">
  <h1>lesson一覧</h1>
</div>

<div style="text-align:center;">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>レッスン名</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @lessons.each do |lesson| %>
        <td><%= lesson.id %></td>
        <td><a href="/lessons/<%=lesson.id%>"><%= lesson.name %></a></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div>
  <%= link_to 'New Lesson', new_lesson_path, class: 'btn btn-primary' %>
  <%= link_to 'トップページへ戻る', top_path, class: 'btn btn-success' %>
</div>
